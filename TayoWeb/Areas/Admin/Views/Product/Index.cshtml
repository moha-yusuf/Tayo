@model List<Product>

<div class="d-flex justify-content-between p-2 mb-4">
    <h1>PRODUCT LIST</h1>
    <a type="button" asp-controller="Product" asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i>
        CREATE NEW PRODUCT
    </a>
</div>
<table class="table border-top border-buttom table-hover">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Category</th>
            <th scope="col">Collection</th>
            <th scope="col">Size</th>
            <th scope="col">Availability</th>
            <th scope="col">Display Order</th>
            <th scope="col" class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
         {
            <tr>
                <td>@obj.Name</td>
                <td>@obj.Price</td>
                <td></td>
                <td></td>
                <td></td>
                <td>@obj.IsAvailable</td>
                <td>@obj.DisplayOrder</td>
                <td class="d-flex flex-column flex-sm-row justify-content-center gap-2">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
         }
    </tbody>
</table>

