@model List<Product>

<div class="d-flex justify-content-between mb-4">
    <h1>PRODUCT LIST</h1>
    <a type="button" asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i>
        CREATE NEW PRODUCT
    </a>
</div>
<table id="tblTable" class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Collection</th>
            <th>Category</th>
            <th>Size</th>
            <th>Availability</th>
            <th>Actions</th>
        </tr>
    </thead>

</table>

@section Scripts {
    <script src="~/js/product.js"></script>
}