@model Category

<h1 class="pb-4">Delete Category</h1>
<form method="post">
    <input asp-for="Id" hidden />
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" disabled class="form-control" id="categoryName">
    </div>
    <div class="mb-3">
        <label asp-for="DisplayOrder" class="form-label"></label>
        <input asp-for="DisplayOrder" disabled class="form-control" id="displayOrder">
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-controller="Category" asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
